# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://soundboard:soundboard@localhost:5433/soundboard

# Storage Configuration
# Directory where audio files and cover images will be stored
# Relative paths are relative to the backend directory
STORAGE_DIR=./storage

# External Tools
# Path to mpv executable (use 'mpv' if it's in your PATH)
MPV_PATH=mpv
# Path to yt-dlp executable (use 'yt-dlp' if it's in your PATH)
YTDLP_PATH=yt-dlp

# Audio Configuration
# Default audio output device (leave empty to use system default)
# On Linux with PipeWire: use 'pactl list short sinks' to find device names
# Example: pipewire/alsa_output.pci-0000_00_1f.3.analog-stereo
# On macOS: leave empty or use device name from 'system_profiler SPAudioDataType'
# On Windows: leave empty or use device name
DEFAULT_OUTPUT_DEVICE=

# Default volume (0-100, leave empty for no default)
DEFAULT_VOLUME=80

# Playback Behavior
# Stop previous sound when playing a new one
STOP_PREVIOUS_ON_PLAY=true
# Allow multiple sounds to play simultaneously
ALLOW_OVERLAPPING=false

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Add your frontend URLs here (Vite default is http://localhost:5173)
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000

# YouTube Download Configuration
# Cookies support (most effective fix for 403 errors)
# Option 1: Use cookies from browser (recommended)
# Values: chrome, firefox, edge, safari, opera, brave
# Example: YTDLP_COOKIES_FROM_BROWSER=chrome
YTDLP_COOKIES_FROM_BROWSER=

# Option 2: Use cookies from file
# Path to cookies.txt file exported from browser
# Example: YTDLP_COOKIES_FILE=/path/to/cookies.txt
YTDLP_COOKIES_FILE=

# Enable verbose logging for debugging YouTube download issues
# Set to true to get detailed yt-dlp output
YTDLP_VERBOSE=false

# System Shortcuts (GNOME)
# Base URL for the API - used when registering system shortcuts
# This must be accessible from the system (not just localhost if running in Docker)
API_BASE_URL=http://localhost:8000
